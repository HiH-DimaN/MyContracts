{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": { "enabled": true },
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**/*",
			"coverage/**/*",
			".github/**/*",
			"docs/**/*",
			"front/**/*",
			"old_*/**/*",
			"typechain-types/**/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}